<h1 class="primary-title">Profile</h1>
  <div class="theme pure-u-1 pure-u-md-3-4">

    <div class="collections">


<section>
  <ul>
    <li><b>Name:</b> <%= @user.name %></li>
    <li><b>Email:</b> <%= @user.email %></li>
  </ul>
 </section>


<section class="cluster">
	    	<header class="cluster-header">
	        <h2 class="theme-subhead">Statistics
	        </h2>
	      </header>
					<div class="cluster-description">
  <table class="stats">
    <tr>
      <td>Date Played</td>
      <td>Deck</td>
      <td>Number Correct</td>
    </tr>
    <% current_user.rounds.all.each do |round| %>
      <tr>
        <td><%= round.created_at.strftime("%m/%d/%Y") %></td>
        <td><%= round.deck.title %></td>
        <td><%= round.num_correct %> out of <%= round.deck.cards.length %></td>
      </tr>
  <% end %>
  </table>
	      	</div>
	      </div>
	    </section>

<section class="cluster">
	<header class="cluster-header">
    <h2 class="theme-subhead">Edit your profile
    </h2>
  </header>
		<div class="cluster-description">
    <div class="click_to">
    	<a href="/users/<%= "#{@user.id}" %>/edit"><b>Edit</b></a>
  	</div>
  </div>
</section>
